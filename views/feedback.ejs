<% layout("./layouts/boilerplate") %>
<body>
    <br><br>
  <div class="container py-5">
    <div class="text-center mb-4">
      <h1 class="display-5 fw-bold">Feedback</h1>
      <p class="lead text-muted">Your feedback helps us improve. Please take a moment to share your thoughts with us.</p>
    </div>

    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <form class="border rounded-4 p-4 shadow-sm bg-light" action="" method="post">
          <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
          </div>

          <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Your Email" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Rating:</label>
            <div class="d-flex gap-1 star-rating">
              <input type="radio" id="star5" name="rating" value="5"><label for="star5" title="5 stars">★</label>
              <input type="radio" id="star4" name="rating" value="4"><label for="star4" title="4 stars">★</label>
              <input type="radio" id="star3" name="rating" value="3"><label for="star3" title="3 stars">★</label>
              <input type="radio" id="star2" name="rating" value="2"><label for="star2" title="2 stars">★</label>
              <input type="radio" id="star1" name="rating" value="1"><label for="star1" title="1 star">★</label>
            </div>
          </div>

          <div class="mb-3">
            <label for="comments" class="form-label">Comments:</label>
            <textarea class="form-control" id="comments" name="comments" rows="4" placeholder="Your Feedback" required></textarea>
          </div>

          <div class="mb-3">
            <label for="improvement" class="form-label">Suggestions for Improvement:</label>
            <textarea class="form-control" id="improvement" name="improvement" rows="4" placeholder="How can we improve Parijana?" required></textarea>
          </div>

          <div class="d-grid">
            <button type="submit" class="btn btn-primary btn-lg">Submit Feedback</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</body>
